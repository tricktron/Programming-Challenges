{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-v",
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "&&",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
        "label":"Enter nix-shell",
        "type": "shell",
        "command": "nix-shell",
        "problemMatcher": []
        } 
    ]
}